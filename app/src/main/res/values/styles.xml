<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="Theme.ToDoApp.BlueText" parent="Widget.AppCompat.Button">
    <item name="android:textColor">@color/blue</item>
  </style>

  <style name="Theme.ToDoApp.DeleteButtonStyle" parent="Widget.AppCompat.Button">
    <item name="android:textColor">@color/red</item>
    <item name="android:background">@android:color/transparent</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="Theme.ToDoApp.SaveButtonStyle" parent="Theme.ToDoApp.BlueText">
    <item name="android:background">@android:color/transparent</item>
  </style>

  <style name="LargeTitleStyle">
    <item name="android:textSize">32sp</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="DatePickerTheme.ButtonBarButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
    <item name="android:textColor">@color/blue</item>
  </style>

  <style name="DatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">@color/blue</item>
    <item name="colorSecondary">@color/blue</item>
    <item name="colorControlActivated">@color/blue</item>
    <item name="colorControlHighlight">@color/blue</item>
    <item name="android:windowBackground">@color/back_secondary</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:colorPrimary">@color/blue</item>
    <item name="android:textColorSecondary">@color/label_tertiary</item>
    <item name="android:textColorPrimary">@color/label_primary</item>
    <item name="android:textColorPrimaryInverse">@color/white</item>
    <item name="android:textColorSecondaryInverse">@color/white</item>
    <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerTheme.ButtonBarButton
    </item>
    <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerTheme.ButtonBarButton
    </item>
  </style>

  <style name="SwitchTheme" parent="Widget.AppCompat.CompoundButton.Switch">
    <item name="android:thumbTint">@color/blue</item>
    <item name="android:trackTint">@color/light_gray</item>
  </style>

</resources>
